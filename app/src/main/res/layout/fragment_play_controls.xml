<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/fragment_play_controls"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    style="@android:style/ButtonBar">

    <Button android:id="@+id/fragment_play_controls_prev" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_weight="1"
        android:text="Prev" />

    <Button android:id="@+id/fragment_play_controls_play_pause" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_weight="1"
        android:text="Play/Pause" />

    <Button android:id="@+id/fragment_play_controls_next" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_weight="1"
        android:text="Next" />

    <Button android:id="@+id/fragment_play_controls_play_shuffle" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_weight="1"
        android:text="Shuffle" />

    <TextView
        android:id="@+id/fragment_play_controls_volume"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</LinearLayout>