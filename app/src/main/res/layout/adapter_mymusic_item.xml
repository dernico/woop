<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/adapter_mymusic_item_image" />

    <TextView
        android:id="@+id/adapter_mymusic_item_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:layout_toRightOf="@+id/adapter_mymusic_item_image"/>


    <TextView
        android:id="@+id/adapter_mymusic_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:layout_toRightOf="@+id/adapter_mymusic_item_image"/>

    <TextView
        android:id="@+id/adapter_mymusic_item_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:layout_toRightOf="@+id/adapter_mymusic_item_image"/>

</LinearLayout>