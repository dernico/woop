<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fragment_streams_search_search_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">


        <Button
            android:id="@+id/fragment_streams_search_button_search"
            android:text="@string/streams_search_button_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ten_dp_margin"/>

        <EditText
            android:id="@+id/fragment_streams_search_query"
            android:layout_toRightOf="@id/fragment_streams_search_button_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


    <ListView
        android:id="@+id/fragment_streams_search_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_streams_search_search_container"></ListView>



</RelativeLayout>