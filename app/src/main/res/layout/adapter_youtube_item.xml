<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/cover_image_size"
        android:layout_height="@dimen/cover_image_size"
        android:id="@+id/adapter_youtube_item_image" />

    <TextView
        android:id="@+id/adapter_youtube_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:layout_toRightOf="@+id/adapter_youtube_item_image"/>

</RelativeLayout>